@inject NavigationManager NavigationManager
@inject ILocalStorage localStorage
<div class="main-header d-flex justify-content-between align-items-center">
    <div @onclick="BackToLogin">
        <img src="/_content/Root/images/logo.png" alt="" height="70px">
    </div>
    <div class="d-flex align-items-center gap-4">
        <div class="d-flex flex-column align-items-center gap-2">
            <p class="mb-0"><img src="/_content/Root/icons/profile_Icon.png" alt=""></p>
            <p class="mb-0 fs-5 fw-bold">@userName</p>
        </div>
        <div class="d-flex flex-column align-items-center gap-2 cursor-pointer" @onclick="HandleLogout">
            <p class="mb-0"><img src="/_content/Root/icons/logout_Icon.png" alt=""></p>
            <p class="mb-0 fs-5 fw-bold">Logout</p>
        </div>
    </div>
</div>

@code {
    string userName => localStorage.GetItem("UserName");

    private void BackToLogin()
    {
        NavigationManager.NavigateTo("/");
    }

    private void HandleLogout()
    {
        NavigationManager.NavigateTo("/");
    }
}